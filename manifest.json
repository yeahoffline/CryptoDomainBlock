{
  "manifest_version": 2,
  "name": "CryptoDomainBlock",
  "short_name": "CryptoDomainBlock",
  "version": "2.0.4",
  "default_locale": "en",
  "description": "Compares domain names to prevent ads, scam, phishing and fake news",
  "homepage_url": "https://github.com/yeahoffline/CryptoDomainBlock",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "src/bg/psl.min.js",
      "src/bg/punycode.min.js",
      "src/bg/knownDomains.js",
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "notifications",
    "https://*/*",
    "http://*/*"
  ]
}
